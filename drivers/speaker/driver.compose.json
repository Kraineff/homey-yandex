{
    "name": {
        "en": "Speaker",
        "ru": "Колонка"
    },
    "class": "speaker",
    "capabilities": ["volume_set", "volume_up", "volume_down", "speaker_playing", "speaker_next", "speaker_prev", "speaker_artist", "speaker_track", "speaker_duration", "speaker_position"],
    "capabilitiesOptions": {
        "volume_set": { "step": 0.1 }
    },
    "images": {
        "small": "/drivers/speaker/assets/images/small.png",
        "large": "/drivers/speaker/assets/images/large.png",
        "xlarge": "/drivers/speaker/assets/images/xlarge.png"
    },
    "platforms": ["local"],
    "connectivity": ["lan", "cloud"],
    "pair": [
        {
            "id": "auth"
        },
        {
            "id": "list_devices",
            "template": "list_devices",
            "navigation": { "next": "add_devices" }
        },
        {
            "id": "add_devices",
            "template": "add_devices"
        }
    ]
}