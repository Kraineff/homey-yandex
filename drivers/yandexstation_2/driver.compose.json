{
    "id": "yandexstation_2",
    "name": {
        "en": "Station Max",
        "ru": "Станция Макс"
    },
    "class": "speaker",
    "capabilities": [
        "speaker_artist", "speaker_track", "speaker_playing", "speaker_next", "speaker_prev",
        "speaker_duration", "speaker_position", "volume_set", "volume_up", "volume_down", "button.reauth"
    ],
    "capabilitiesOptions": {
        "volume_set": {
            "min": 0,
            "max": 10,
            "step": 1
        },
        "button.reauth": {
            "maintenanceAction": true,
            "title": {
                "en": "Re-authorize",
                "ru": "Повторная авторизация"
            },
            "desc": {
                "en": "Re-authorize of the Yandex account.",
                "ru": "Повторная авторизация аккаунта Яндекс."
            }
        }
    },
    "images": {
        "small": "/drivers/yandexstation_2/assets/images/small.png",
        "large": "/drivers/yandexstation_2/assets/images/large.png",
        "xlarge": "/drivers/yandexstation_2/assets/images/xlarge.png"
    },
    "platforms": ["local"],
    "connectivity": ["cloud", "lan"],
    "pair": [
        {
            "id": "auth"
        },
        {
            "id": "list_devices",
            "template": "list_devices",
            "navigation": { "next": "add_devices" }
        },
        {
            "id": "add_devices",
            "template": "add_devices"
        }
    ]
}