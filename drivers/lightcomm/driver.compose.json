{
    "id": "lightcomm",
    "name": "DEXP Smartbox",
    "class": "speaker",
    "capabilities": [
        "speaker_artist", "speaker_track", "speaker_playing", "speaker_next", "speaker_prev",
        "speaker_duration", "speaker_position", "volume_set", "volume_up", "volume_down"
    ],
    "capabilitiesOptions": {
        "volume_set": {
            "min": 0,
            "max": 10,
            "step": 1
        }
    },
    "images": {
        "small": "/drivers/lightcomm/assets/images/small.png",
        "large": "/drivers/lightcomm/assets/images/large.png",
        "xlarge": "/drivers/lightcomm/assets/images/xlarge.png"
    },
    "platforms": ["local"],
    "connectivity": ["cloud"],
    "pair": [
        {
            "id": "auth"
        },
        {
            "id": "list_devices",
            "template": "list_devices",
            "navigation": { "next": "add_devices" }
        },
        {
            "id": "add_devices",
            "template": "add_devices"
        }
    ],
    "settings": [
        {
            "type": "group",
            "label": {
                "en": "Authorization Data",
                "ru": "Данные авторизации"
            },
            "children": [
                {
                    "id": "x_token",
                    "type": "text",
                    "value": "",
                    "label": {
                        "en": "General Token",
                        "ru": "Основной токен"
                    },
                    "hint": {
                        "en": "Remove to reauthorize",
                        "ru": "Удалите для повторной авторизации"
                    }
                },
                {
                    "id": "cookies",
                    "type": "text",
                    "value": "",
                    "label": {
                        "en": "Cookies",
                        "ru": "Файлы Cookie"
                    },
                    "hint": {
                        "en": "Remove to reauthorize",
                        "ru": "Удалите для повторной авторизации"
                    }
                }
            ]
        }
    ]
}